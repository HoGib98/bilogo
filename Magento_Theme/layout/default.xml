<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="footer">
        <!--
        /** 
         * remove ="tre" delete the footer previus
         * adds our custom block with Magento_Theme::footer_menu.phtml template.
         */ 
        -->
            <referenceBlock name="footer_links" remove="true" />
            <referenceBlock name="copyright" remove="true"/>
            <referenceBlock name="form.subscribe" remove="true"/>
            <referenceBlock name="report.bugs" remove="true" />
            <block class="Magento\Framework\View\Element\Template" name="footer.top.menu" before="footer.navigation.menu" template="Magento_Theme::footer_top.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="footer.navigation.menu" before="-" template="Magento_Theme::footer_menu.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="footer.bottom.menu" after="footer.navigation.menu" template="Magento_Theme::footer_bottom.phtml"/>
        </referenceContainer>
    </body>
</page>